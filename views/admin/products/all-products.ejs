<%- include("../../shared/includes/head",{pageTitle:"Signup"}) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body> 
    <%- include("../../shared/includes/header") %>
    <main>
        <h1>All Product Administration</h1>
        <section>
            <h2>Manage Products</h2>
            <p><a href="/admin/products/new" class="btn">Add Product</a></p>
        </section>
        <section>
            <h2>Products</h2>
            <ul>
                <% for(const product of products) {%>
                <li>
                    <article>
                        <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                        <h3><%= product.title %></h3>
                        <p><%= product.summary %></p>
                        <p><%= product.price %></p>
                        <p><%= product.description %></p>
                        <a class="btn btn-alt" href="/admin/products/" <%= product.id %>>Edit</a>
                        <button class="btn btn-alt">Delete</button>
                    </article>
                </li>
                <% } %>
            </ul>
        </section>
    </main>
    <%- include("../../shared/includes/footer") %>
    